{
  "name": "whatsapp-widget-standalone",
  "version": "1.0.0",
  "description": "A simple WhatsApp live chat widget for your website.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/griojas/whatsapp-widget.git"
  },
  "keywords": [
    "whatsapp",
    "live-chat",
    "widget",
    "html",
    "css",
    "javascript",
    "chat"
  ],
  "author": {
    "name": "Guillermo Riojas",
    "email": "guillermo.riojas@gmail.com",
    "url": "https://github.com/griojas"
  },
  "style": "dist/css/whatsapp-widget-standalone.css",
  "sass": "scss/default.scss",
  "main": "dist/js/whatsapp-widget-standalone.js",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/griojas/whatsapp-widget/issues"
  },
  "homepage": "https://github.com/griojas/whatsapp-widget#readme",
  "files": [
    "dist/**/*.{css,js}",
    "src/**/*.{js}",
    "scss/**/*.scss"
  ],
  "scripts": {
    "compile": "npm-run-all --parallel compile:*",
    "compile:css": "node-sass --output-style expanded --precision 6 scss/default.scss dist/css/whatsapp-widget-standalone.css",
    "compile:js": "rollup --config",
    "lint:js": "eslint src",
    "minify": "npm-run-all --parallel minify:*",
    "minify:css": "csso dist/css/whatsapp-widget-standalone.css --output dist/css/whatsapp-widget-standalone.min.css",
    "minify:js": "terser --compress --mangle --comments \"/^!/\" --output dist/js/whatsapp-widget-standalone.min.js dist/js/whatsapp-widget-standalone.js",
    "watch": "npm-run-all --parallel watch:*",
    "watch:css": "nodemon --watch scss/ --ext scss --exec \"npm-run-all compile:css minify:css\"",
    "watch:js": "nodemon --watch src/ --ext js --exec \"npm-run-all lint:js compile:js minify:js\""
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@rollup/plugin-babel": "^5.1.0",
    "csso-cli": "^3.0.0",
    "eslint": "^7.6.0",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.21.0",
    "terser": "^4.8.0"
  }
}
